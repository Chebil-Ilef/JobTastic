@model JobTastic.Models.JobOfferViewModels.DetailsJobOfferViewModel

@{
    ViewData["Title"] = "Details - Job Offer";
}
<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Libraries Stylesheet -->
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/DetailsCss.css"> <!-- Link to your CSS file -->
</head>

<div class="container">

    <div class=" text-center mt-5 ">
        <h3>@ViewData["Title"]</h3>
        <hr>
    </div>

<div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s" style="visibility: visible; animation-delay: 0.1s; animation-name: fadeInUp;">
    <div class="container">
        <div class="row gy-5 gx-4">
            <div class="col-lg-7">
                <div class="d-flex align-items-center mb-5">
                        <div >
                            <h3 class="mb-3" style="display: flex; justify-content: center;">@Html.DisplayFor(model => model.Title) </h3>
                            <span class="text-truncate me-3"><i class="fa fa-map-marker-alt text-primary me-2"></i>@Html.DisplayFor(model => model.Location)</span>
                            <span class="text-truncate me-3"><i class="far fa-clock text-primary me-2"></i>@Html.DisplayFor(model => model.JobType.Name)</span>
                            <span class="text-truncate me-0"><i class="far fa-money-bill-alt text-primary me-2"></i>@Html.DisplayFor(model => model.Salary)</span>
                        </div>
                </div>

                <div class="mb-5">
                    <h4 class="mb-3">Author's email</h4>
                    <p> @Html.DisplayFor(model => model.Author.Email) </p>
                    <h4 class="mb-3">Job description</h4>
                    <p> @Html.DisplayFor(model => model.Description) </p>
                    
                </div>
                <div>
                    
                    <a asp-action="Index" class="btn btn-default btn-sm">Back to list</a>
                        @if (User.IsInRole("JobSearcher")) 
                        {
                            <a asp-controller="JobApply" asp-action="Apply" asp-route-id="@Model.JobOfferId" class="btn btn-primary btn-sm">Apply</a>
                        }
                </div>

            </div>

            <div class="col-lg-5">
                <div class="bg-light rounded p-5 mb-4 wow slideInUp" data-wow-delay="0.1s" style="visibility: visible; animation-delay: 0.1s; animation-name: slideInUp;">
                    <h4 class="mb-4">Job Summery</h4>
                    <p><i class="fa fa-angle-right text-primary me-2"></i>Published By: @Html.DisplayFor(model => model.Author.Email) </p>
                    <p><i class="fa fa-angle-right text-primary me-2"></i>Published On: @Html.DisplayFor(model => model.Submitted) </p>
                    <p><i class="fa fa-angle-right text-primary me-2"></i>Last edited On: @Html.DisplayFor(model => model.LastEdit) </p>
                    <p><i class="fa fa-angle-right text-primary me-2"></i>Job Category: @Html.DisplayFor(model => model.JobCategory.Name)</p>
                    <p><i class="fa fa-angle-right text-primary me-2"></i>Job Nature: @Html.DisplayFor(model => model.JobType.Name) </p>
                    <p><i class="fa fa-angle-right text-primary me-2"></i>Salary: @Html.DisplayFor(model => model.Salary) </p>
                    <p><i class="fa fa-angle-right text-primary me-2"></i>Location: @Html.DisplayFor(model => model.Location) </p>
                    <p><i class="fa fa-angle-right text-primary me-2"></i>Number Of Visits: @Html.DisplayFor(model => model.Visits) </p>
                        @if (@Model.CanEdit)
                        {
                            <a asp-action="Edit" asp-route-id="@Model.JobOfferId" class="btn btn-primary btn-sm">Edit</a>
                            <a asp-action="Delete" asp-route-id="@Model.JobOfferId" class="btn btn-danger btn-sm">Delete</a>
                        }

                </div>
            </div>
        </div>
    </div>

</div>
</div>