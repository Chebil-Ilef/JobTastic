@model JobTastic.Models.JobOfferViewModels.DetailsJobOfferViewModel

@{
    ViewData["Title"] = "Details - Job Offer";
}

<h3>@ViewData["Title"]</h3>
<hr/>
<div>
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">
            @TempData["Message"]
        </div>
    }
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Submitted)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Submitted)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.LastEdit)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LastEdit)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Author.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Author.Email)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.JobCategory)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.JobCategory.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.JobType)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.JobType.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Salary)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Salary)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Location)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Visits)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Visits)
        </dd>
    </dl>
    @if (@Model.CanEdit)
    {
    <a asp-action="Edit" asp-route-id="@Model.JobOfferId" class="btn btn-primary btn-sm">Edit</a>
    }
    <a asp-action="Index" class="btn btn-default btn-sm">Back to list</a>
        @if ((User.IsInRole("JobSearcher")) && (ViewBag.ApplyButton==true)){
        <a asp-controller="JobApply" asp-action="Apply" asp-route-id="@Model.JobOfferId" class="btn btn-primary btn-sm">Apply</a>
        }
</div>
