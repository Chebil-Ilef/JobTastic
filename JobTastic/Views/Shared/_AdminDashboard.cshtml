<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Skydash Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <link rel="stylesheet" href="~/vendors/datatables.net-bs4/dataTables.bootstrap4.css">
    <link rel="stylesheet" href="~/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" type="text/css" href="~/js/select.dataTables.min.css">
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/images/favicon.png" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

</head>
<body>
    <div class="container-scroller">
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:partials/_settings-panel.html -->
            <div class="theme-setting-wrapper">
                <div id="settings-trigger"><i class="ti-settings"></i></div>
                <div id="theme-settings" class="settings-panel">
                    <i class="settings-close ti-close"></i>
                    <p class="settings-heading">SIDEBAR SKINS</p>
                    <div class="sidebar-bg-options selected" id="sidebar-light-theme"><div class="img-ss rounded-circle bg-light border mr-3"></div>Light</div>
                    <div class="sidebar-bg-options" id="sidebar-dark-theme"><div class="img-ss rounded-circle bg-dark border mr-3"></div>Dark</div>
                    <p class="settings-heading mt-2">HEADER SKINS</p>
                    <div class="color-tiles mx-0 px-4">
                        <div class="tiles success"></div>
                        <div class="tiles warning"></div>
                        <div class="tiles danger"></div>
                        <div class="tiles info"></div>
                        <div class="tiles dark"></div>
                        <div class="tiles default"></div>
                    </div>
                </div>
            </div>

            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="icon-grid menu-icon"></i>
                            <span class="menu-title">Dashboard</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="collapse" href="#ui-basic" aria-expanded="false" aria-controls="ui-basic">
                            <i class="icon-layout menu-icon"></i>
                            <span class="menu-title">Jobs</span>
                            <i class="menu-arrow"></i>
                        </a>
                        <div class="collapse" id="ui-basic">
                            <ul class="nav flex-column sub-menu">
                                <li class="nav-item"> <a class="nav-link" href="/">Job Offers</a></li>
                                <li class="nav-item"> <a class="nav-link" href="/">Pending Job Offers</a></li>
                            </ul>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="icon-grid menu-icon"></i>
                            <span class="menu-title">Manage Users</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="collapse" href="#tables" aria-expanded="false" aria-controls="tables">
                            <i class="icon-grid-2 menu-icon"></i>
                            <span class="menu-title">Admin Users</span>
                            <i class="menu-arrow"></i>
                        </a>
                        <div class="collapse" id="tables">
                            <ul class="nav flex-column sub-menu">
                                <li class="nav-item"> <a class="nav-link" href="/">Admins</a></li>
                                <li class="nav-item"> <a class="nav-link" href="/">Add Admin</a></li>
                                <li class="nav-item"> <a class="nav-link" href="/">Remove Admin</a></li>
                            </ul>
                        </div>
                    </li>
                </ul>
            </nav>
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="row">
                        <div class="col-md-12 grid-margin">
                            <div class="row">
                                <div class="col-12 col-xl-8 mb-4 mb-xl-0">
                                    <h3 class="font-weight-bold">Welcome Admin</h3>
                                    <h6 class="font-weight-normal mb-0">All systems are running smoothly!</h6>
                                </div>
                                <div class="col-12 col-xl-4">
                                    <div class="justify-content-end d-flex">
                                        <div class="dropdown flex-md-grow-1 flex-xl-grow-0">
                                            <i class="mdi mdi-calendar"></i> Today (@DateTime.Now.ToString("dd MMM yyyy"))
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 grid-margin stretch-card">
                            <div class="card tale-bg">
                                <div class="card-people mt-auto">
                                    <img src="~/img/dashboard/people.png" alt="people">
                                    <div class="weather-info">
                                        <div class="d-flex">
                                            <div>
                                                <h2 class="mb-0 font-weight-normal"><i class="icon-sun mr-2"></i>19<sup>C</sup></h2>
                                            </div>
                                            <div class="ml-2">
                                                <h4 class="location font-weight-normal">Tunis</h4>
                                                <h6 class="font-weight-normal">Tunisia</h6>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 grid-margin transparent">
                            <div class="row">
                                <div class="col-md-6 mb-4 stretch-card transparent">
                                    <div class="card card-tale">
                                        <div class="card-body">
                                            <p class="mb-4">Today’s Offers</p>
                                            <p class="fs-30 mb-2">@Model?.TodaysOffers</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4 stretch-card transparent">
                                    <div class="card card-dark-blue">
                                        <div class="card-body">
                                            <p class="mb-4">Total Job Offers</p>
                                            <p class="fs-30 mb-2">@Model?.TotalOffers</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-4 mb-lg-0 stretch-card transparent">
                                    <div class="card card-light-blue">
                                        <div class="card-body">
                                            <p class="mb-4">Number of Recruiters</p>
                                            <p class="fs-30 mb-2">@Model?.NumberOfRecruiters</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 stretch-card transparent">
                                    <div class="card card-light-danger">
                                        <div class="card-body">
                                            <p class="mb-4">Number of Job Searchers</p>
                                            <p class="fs-30 mb-2">@Model?.NumberOfJobSearchers</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-7 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body">
                                    <p class="card-title mb-0">Top Offers</p>
                                    <div class="table-responsive">
                                        <table class="table table-striped table-borderless">
                                            <thead>
                                                <tr>
                                                    <th>Job Title</th>
                                                    <th>Salary</th>
                                                    <th>Date Submitted</th>
                                                    <th>Number of Visits</th>
                                                    <th>Location</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var offer in Model.Offers)
                                                {
                                                    <tr>
                                                        <td>@offer.JobTitle</td>
                                                        <td class="font-weight-bold">@offer.Salary</td>
                                                        <td>@offer.DateSubmitted.ToString("dd MMM yyyy")</td>
                                                        <td class="font-weight-medium">
                                                            <div class="badge badge-success">@offer.VisitsCount</div>
                                                        </td>
                                                        <td>@offer.Location</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-5 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body">
                                    <p class="card-title mb-0">Users List</p>
                                    <div class="table-responsive">
                                        <table class="table table-borderless">
                                            <thead>
                                                <tr>
                                                    <th class="pl-0  pb-2 border-bottom">Username</th>
                                                    <th class="border-bottom pb-2">Email</th>
                                                    <th class="border-bottom pb-2">Selected role</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var user in Model.UsersList)
                                                {
                                                    <tr>
                                                        <td class="pl-0">@user.Name</td>
                                                        <td>
                                                            <p class="mb-0">
                                                                <span class="font-weight-bold mr-2">@user.Email</span>
                                                            </p>
                                                        </td>
                                                        <td class="text-muted">@user.SelectedRole</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- CHART -->

                        <div class="col-md-6 stretch-card grid-margin ">
                            <div class="card">
                                <div class="card-body">
                                    <p class="card-title">Job Categories</p>
                                    <div>
                                        <canvas id="myChart"></canvas>
                                    </div>


                                    <script>
                                        const ctx = document.getElementById('myChart');
                                        //Static for testing
                                        //var labels=['IT', 'Accounting', 'Arts', 'Education', 'Law', 'Others'];
                                        //var values = [12, 19, 3, 5, 2, 3];
                                        var labels = @Html.Raw(Json.Serialize(Model.ChartData.Labels));
                                        var values = @Html.Raw(Json.Serialize(Model.ChartData.Values));


                                        new Chart(ctx, {
                                            type: 'pie',
                                            data: {
                                                labels: labels,
                                                datasets: [{
                                                    label: 'Total',
                                                    data: values,
                                                    borderWidth: 1
                                                }]
                                            }

                                        });
                                    </script>

                                </div>
                            </div>
                        </div>
                        <!-- CHART END -->
                        <!-- Bar Graph -->
                        <div class="col-md-6 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body">
                                    <p class="card-title">Job Types</p>
                                    <div>
                                        <canvas id="barChart"></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Bar Graph END -->

                        <script>
                            const ctx2 = document.getElementById('barChart');
                            //Static for testing
                            //var labs=['Full Time', 'Part Time', 'Remote'];
                            //var data =[12, 19, 3];
                            var labs = @Html.Raw(Json.Serialize(Model.BarData.Labs));
                            var data = @Html.Raw(Json.Serialize(Model.BarData.Data));

                            new Chart(ctx2, {
                                type: 'bar',
                                data: {
                                    labels: labs,
                                    datasets: [{
                                        label: 'Total',
                                        data: data,
                                        backgroundColor: [
                                            'rgba(153, 102, 255, 0.2)',
                                            'rgba(54, 162, 235, 0.2)',
                                            'rgba(75, 192, 192, 0.2)'
                                           
                                        ],
                                        borderColor: [
                                            'rgb(153, 102, 255)',
                                            'rgb(54, 162, 235)',
                                            'rgb(75, 192, 192)'

                                        ],
                                        borderWidth: 1
                                    }]
                                },
                                options: {
                                    scales: {
                                        y: {
                                            beginAtZero: true,
                                            stepSize: 5,
                                        }
                                    }
                                }
                            });
                        </script>


                        <!-- content-wrapper ends -->
                        <!-- partial:partials/_footer.html -->
                        <footer class="footer">
                            <div class="d-sm-flex justify-content-center justify-content-sm-between">
                                <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Copyright © 2024. JobTastic GL3. All rights reserved.</span>
                                <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Hand-crafted & made with <i class="ti-heart text-danger ml-1"></i></span>
                            </div>
                        </footer>
                        <!-- partial -->
                    </div>
                    <!-- main-panel ends -->
                </div>
                <!-- page-body-wrapper ends -->
            </div>
            <!-- container-scroller -->
            <!-- plugins:js -->
            <script src="~/vendors/js/vendor.bundle.base.js"></script>
            <!-- endinject -->
            <!-- Plugin js for this page -->
            <script src="~/vendors/chart.js/Chart.min.js"></script>
            <script src="~/vendors/datatables.net/jquery.dataTables.js"></script>
            <script src="~/vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script>
            <script src="~/js/dataTables.select.min.js"></script>

            <!-- End plugin js for this page -->
            <!-- inject:js -->
            <script src="~/js/off-canvas.js"></script>
            <script src="~/js/hoverable-collapse.js"></script>
            <script src="~/js/template.js"></script>
            <script src="~/js/settings.js"></script>
            <!-- endinject -->
          
            <!-- End custom js for this page-->
</body>

</html>

