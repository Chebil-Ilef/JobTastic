@using Microsoft.AspNetCore.Identity
@using JobTastic.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewBag.Title = "CV Content";
}

<h2>CV Content</h2>

@if (!string.IsNullOrEmpty(ViewBag.CVPath))
{
    <br />
    <br />
    <br />
    <iframe src="@Url.Content(ViewBag.CVPath)" style="width: 100%; height: 600px;"></iframe>
    <br />
    <br />
    <br />
    <a href="@Url.Action("DownloadCV", "Resume", new { userId=UserManager.GetUserId(User) })">Download</a>

}
else
{
    <p>No CV content available.</p>
}

